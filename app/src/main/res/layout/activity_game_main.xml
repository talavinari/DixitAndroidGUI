<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.tal.myfirstapplication.GameMain">

    <ImageView
        android:id="@+id/table"
        android:src="@drawable/table"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        />
    <ImageView
        android:id="@+id/card6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/card5"
        android:contentDescription="@string/dummy_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card6text"
        android:text="0"
        android:layout_alignLeft="@+id/card6"
        android:layout_alignTop="@+id/card6"
        android:layout_alignRight="@+id/card6"
        android:layout_alignBottom="@+id/card6"
        android:gravity="center" />
    <ImageView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/dummy_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card1text"
        android:text="0"
        android:layout_alignLeft="@+id/card1"
        android:layout_alignTop="@+id/card2"
        android:layout_alignRight="@+id/card1"
        android:layout_alignBottom="@+id/card1"
        android:gravity="center" />
    <ImageView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/card1"
        android:contentDescription="@string/dummy_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card2text"
        android:text="0"
        android:layout_alignLeft="@+id/card2"
