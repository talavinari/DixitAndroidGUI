        android:gravity="center" />

    <ImageView
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/card2"
        android:contentDescription="@string/dummy_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card3text"
        android:text="0"
        android:layout_alignLeft="@+id/card3"
        android:layout_alignTop="@+id/card3"
        android:layout_alignRight="@+id/card3"
        android:layout_alignBottom="@+id/card3"
        android:gravity="center" />

    <ImageView
        android:id="@+id/card4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/card3"
        android:contentDescription="@string/dummy_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card4text"
        android:text="0"
        android:layout_alignLeft="@+id/card4"
        android:layout_alignTop="@+id/card4"
        android:layout_alignRight="@+id/card4"
        android:layout_alignBottom="@+id/card4"
        android:gravity="center" />
    <ImageView
        android:id="@+id/card5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/card4"
        android:contentDescription="@string/dummy_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card5text"
        android:text="0"
        android:layout_alignLeft="@+id/card5"
        android:layout_alignTop="@+id/card5"
        android:layout_alignRight="@+id/card5"
        android:layout_alignBottom="@+id/card5"
        android:gravity="center" />
